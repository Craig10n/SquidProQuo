<h1> Edit Debt </h1>
<%= form_for [@user, @debt] do |f| %>

	<%= f.label :lender %>
	<%= f.text_field :lender %>
	
	<%= f.label :description %>
	<%= f.text_field :description %>

	<%= f.label :category %>
  <%= f.select(:category,['Money','Food','Service','Other'])%><br>
	
	<%= f.label :is_fulfilled %>
	<%= f.check_box :is_fulfilled %>

	<%= f.submit %>
<% end %>
