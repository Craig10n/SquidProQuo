<h1> New Debt </h1>
<%= form_for [@user, @debt] do |f| %>

	<%= f.label :lender %>
	<%= f.text_field :lender %><br>

	<%= f.label :description %>
	<%= f.text_field :description %><br>

	<%= f.label :category %>
	<%= f.select(:category,['Money','Food','Service','Other'])%><br>

	<%= f.submit class: "btn btn-success btn-lg user-button" %>
<% end %>
